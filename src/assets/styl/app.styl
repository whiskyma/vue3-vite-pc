/****************** 定义全局样式  ********************/
// body背景颜色
$bj-body-color = #fff
// footer背景颜色
$bj-footer-color = #f4f4f4
// grad背景颜色
$bj-gray-color = #dddddd
//  默认背景颜色
$bj-default-color = #f2f2f2
// 纯文字颜色
$text-color = #333
// 纯文字颜色-激活
$text-active-color = rgba(212, 218, 38, 0.711)
// 输入框文字颜色
$text-input-color = #666
// 输入框placeholder颜色
$text-input-place-color = #666
// 边框颜色
$border-color = rgba(0,0,0,.2)
// 阴影颜色
$border-shadow = #666
// 函数调用
flexCenter(justcon=center)
    display: flex;
    justify-content: justcon;
    align-items: center;
.lay
    width: 1200px
    margin: 0 auto
// banner高度
bannerHeight(banHei=480px)
    height: banHei
// 默认背景图片
defaultBg()
    background: url('@/assets/images/default.svg') no-repeat
    background-position: center
    background-color: #cac7c7eb;
// div居中
.divCen
    height: calc(100vh - 80px)
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
.conCen
    width 1200px
    margin: 0 auto


@import './element.styl'
body,html
    width:100%;
    height:100%;
    font-size:16px;
    overflow-x: hidden
    color: #333;
*
    margin:0;
    padding:0;
    list-style:none;
i,em,b
    font-style:normal;
    font-weight:normal;
input,textarea,select
    -webkit-appearance:none;
    border:0;
    background:transparent;
button,input,input[type=button]:focus
    overflow visible
    outline none
    border 0
    -webkit-tap-highlight-color:rgba(0,0,0,0)
input,a,span
    -webkit-tap-highlight-color:rgba(0,0,0,0);
a
    text-decoration none
    color #666
#app
    display:-webkit-box;
    -webkit-box-orient:vertical;
    height:100%;
section
    min-height: 600px
.display-enter,.display-leave-active
    opacity: 0
.display-enter-active,.display-leave
    transition: all .5s ease
    -moz-transition: all .5s ease
    -webkit-transition: all .5s ease
    -o-transition: all .5s ease

space-between()
    display: flex
    justify-content: space-between
    align-items: center
between()
    position absolute
    top 45%
    left 50%
    transform: translate(-50%, -50%)

 /* 过度动画 */
.fade-enter-active
    transition: all 0.3s ease-out;

.fade-leave-active
    transition: all 0.3s cubic-bezier(1, 0.5, 0.8, 1);

.fade-enter-from,
.fade-leave-to
    transform: translateX(20px);
    opacity: 0;
// header
header
    height: 80px;
    line-height: 80px;
    background: #f2f2f2
    box-shadow: 0px 4px 4px rgba(0,0,0,.2)
    ul
        @extend .lay
        flexCenter(left)
        position: relative
        li
            padding: 0 30px;
            text-align: center;
            cursor pointer
            font-size: 17px
            &.act
                color: $text-active-color
        .logbox
            position: absolute;
            right: 0;
            top: 0;
            display: flex;
            justify-content: center;
            span
                width 50px
                text-align: center
                cursor pointer
                font-size: 17px
// footer
footer
    background-color: $bj-footer-color
    color: #666
    padding: 30px 0 30px 0
    .foo1
        flexCenter(space-around)
        width: 1200px;
        margin: 40px auto;
        img
            width: 180px
            margin-right: 100px
    .foo2
        font-size: 14px
        text-align: center
    li
        margin: 15px 0
// comBanner
.comBanner
    background: $bj-gray-color
    .el-carousel__container
        bannerHeight()
    .imgBg
        bannerHeight()
        background-size: cover
        cursor pointer
// comNotice
.comNotice
    background-color: $bj-default-color
    .notbox
        @extend .conCen
        flexCenter(space-between)
        overflow: hidden;
    ul
        height: 40px;
        line-height: 40px;
        cursor pointer
        width 92%
        li
            white-space: nowrap;
            overflow hidden
            text-overflow: ellipsis
        &.animate-up
            transition: all 0.5s ease-in-out;
            transform: translateY(-40px);
    p
        color: $text-active-color
        cursor pointer
// .notice
.notice
    @extend .conCen
    margin-top: 20px
    margin-bottom: 20px
    padding-top: 50px
    li
        border-bottom: 1px solid $border-color
        margin-bottom: 20px
        cursor: pointer;
    .p1
        display: flex
        justify-content: space-between;
        color: #666
    .p2
        margin-top: 10px;
        padding-bottom: 10px;
    .el-breadcrumb
        margin-bottom: 30px
// shopShow
.shopShow
    @extend .conCen
    padding: 15px 0
    .shop-tl
        position relative
        padding-left: 10px;
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 10px;
        &:before
            content: ''
            position absolute
            width: 3px
            top: 5px;
            left: 0px;
            background: #333;
            height: 16px;
    .shop-item
        display: flex;
        flex-wrap: wrap;
        // justify-content: space-between;
        width: 100%;
        cursor pointer
        li
            width: 290px;
            height: 290px;
            margin-bottom: 13px;
            text-align: center;
            overflow hidden
            padding-right: 13px
            .imgBox
                width: 290px
                height: 258px
                overflow: hidden
                .imgBg
                    height: 258px;
                    transition: all .5s
                    background-size: cover;
                    background-color: $bj-default-color
                    &:hover
                        transform: scale(1.1)
            p
                height: 30px
                line-height 30px
                padding: 0 10px
                white-space:nowrap
                text-overflow: ellipsis
                overflow: hidden
                background: $bj-default-color
            &:nth-child(4n)
                padding-right: 0
// .comBacktop
.comBacktop
    position: absolute;
    right: 60px;
    bottom: 150px;
    width: 60px;
    height: 60px;
    border: 1px solid #ddd;
    border-radius: 8px;
    cursor: pointer;
    background: #fff;
    flexCenter()
    &:hover
        box-shadow: 0px 1px 2px #ddd
    svg
        color: #666
/* 设置滚动条的样式 */
::-webkit-scrollbar
    width:8px;
/* 滚动槽 */
::-webkit-scrollbar-track
    -webkit-box-shadow:inset006pxrgba(0,0,0,0.3);
    border-radius:10px;
/* 滚动条滑块 */
::-webkit-scrollbar-thumb
    border-radius:10px;
    background:rgba(0,0,0,0.15);
    -webkit-box-shadow:inset006pxrgba(0,0,0,0.5);
::-webkit-scrollbar-thumb:window-inactive
    background:rgba(255,0,0,0.4);
// .logReg
.logReg
    @extend .conCen
    margin-top: 80px
    margin-bottom: 80px
    display: flex
    .logL
        width: 50%
    .logR
        margin: 10px auto;
    .logbox
        margin: 30px auto;
        width: 430px;
        display: flex;
        justify-content: center;
        background: #f2f2f2
        cursor pointer
        li
            width: 50%
            text-align: center
            height: 45px
            line-height: 45px
            &.act
                background: $text-active-color
    .el-form
        width: 380px;
        margin: 60px auto 40px;
    .el-button
        width: 307px;
        margin-top: 30px;
        font-size: 16px;
        letter-spacing: 2px;